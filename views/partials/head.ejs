form {
    background: linear-gradient(to right, #082a3c, #feb47b);
    width: 400px;
    padding: 30px;
    text-align: center;
    margin: 50px auto;
    border-radius: 8px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
}

input, .task-form textarea {
    padding: 10px;
    margin: 10px 0;
    border-radius: 5px;
    border: 1px solid #ddd;
    width: 90%;
}

input:focus, textarea:focus {
    border-color: #061055b7;
    outline: none;
}

/* Buttons */
button {
    padding: 14px 40px;
    font-size: 1.1rem;
    color: white;
    text-decoration: none;
    background-color: #333;
    border-radius: 30px;
    border-color: inherit;
    transition: background-color 0.4s ease, transform 0.4s ease, box-shadow 0.4s ease;
    position: relative;
    overflow: hidden;
}

button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 300%;
    height: 300%;
    background: rgba(255, 255, 255, 0.1);
    transition: width 0.5s ease, height 0.5s ease, top 0.5s ease, left 0.5s ease;
    transform: translate(-50%, -50%) rotate(45deg);
}

button:hover::before {
    width: 0;
    height: 0;
    top: 50%;
    left: 50%;
}

button:hover {
    background-color: #555;
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
}

/* Footer */
footer {
    background: linear-gradient(to right, #082a3c, #feb47b);
    padding: 20px;
    text-align: center;
    color: #fff;
    position: fixed;
    width: 100%;
    bottom: 0;
}

/* Sub-heading */
.sub-heading {
