/* Task container styling */
.listBody {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 30px;
    padding: 20px;
}

/* Task item styling */
.task {
    border-left: 8px solid #a45205db;
    background-color: #fff;
    padding: 15px;
    border-radius: 10px;
    transition: box-shadow 0.3s ease-in-out, transform 0.2s ease-in-out;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* Hover effect for tasks */
.task:hover {
    box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
    transform: translateY(-5px);
}

/* Main line styling */
.main-line {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

/* Title styling */
.task h2 {
    font-size: 20px;
    margin: 0;
    color: #333;
}

/* Controls styling */
.controls {
    display: flex;
    gap: 10px;
}

.controls a {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    color: #1d5087;
    border: 1px solid #8da1b7;
    padding: 6px 10px;
    border-radius: 5px;
    transition: background-color 0.3s ease, color 0.3s ease;
    text-decoration: none;
}

.controls a:hover {
    background-color: #b94423a4;
    color: #fff;
}

/* Body and date styling */
.task p {
    margin: 5px 0;
    color: #666;
}

/* Due date styling */
.task .due-date {
    font-size: 14px;
    color: #999;
    margin-top: 5px;
}

/* New Task Button Styling */
.new-task {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease, transform 0.2s ease;
    text-align: center;
    grid-column: span 1;
    grid-row: span 1;
}

.new-task:hover {
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    transform: translateY(-3px);
}

.new-task a {
